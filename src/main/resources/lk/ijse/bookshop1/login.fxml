<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #d4a7e5;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.bookshop1.controller.LoginController">

    <VBox spacing="15" alignment="CENTER"
          AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">

        <Label text="Sirimanna Bookshop"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #681986;">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>

        <Label text="Login"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #3e1260;">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <VBox spacing="10" alignment="CENTER" maxWidth="300">
            <Label text="Username" style="-fx-font-size: 14px; -fx-font-weight: bold;">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <TextField fx:id="txtUsername"
                       promptText="Enter username"
                       maxWidth="250"
                       style="-fx-background-color: white; -fx-background-radius: 5;"/>

            <Label text="Password" style="-fx-font-size: 14px; -fx-font-weight: bold;">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <PasswordField fx:id="txtPassword"
                           promptText="Enter password"
                           maxWidth="250"
                           style="-fx-background-color: white; -fx-background-radius: 5;"/>

            <Button text="Login"
                    fx:id="btnLogin"
                    onAction="#handleLogin"
                    maxWidth="150"
                    style="-fx-background-color: #681986; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 5;">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
                <VBox.margin>
                    <Insets top="10" />
                </VBox.margin>
            </Button>

            <Label fx:id="lblMessage"
                   style="-fx-text-fill: red; -fx-font-size: 12px;" />
        </VBox>
    </VBox>
</AnchorPane>